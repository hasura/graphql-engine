cabal-version: 2.2
name: api-tests
version: 1.0.0

executable api-tests
  build-tool-depends: hspec-discover:hspec-discover

  build-depends:
    , HUnit
    , aeson
    , base
    , bytestring
    , dc-api
    , fast-logger
    , hasura-prelude
    , hspec
    , http-conduit
    , http-types
    , lens
    , lens-aeson
    , morpheus-graphql
    , pg-client
    , postgresql-simple
    , safe-exceptions
    , split
    , test-harness
    , text
    , unordered-containers
    , uuid
    , vector

  default-extensions:
    BlockArguments
    DataKinds
    DeriveGeneric
    DerivingStrategies
    ImportQualifiedPost
    MultiWayIf
    NamedFieldPuns
    NoImplicitPrelude
    OverloadedStrings
    PatternGuards
    RecordWildCards
    ScopedTypeVariables
    TypeApplications
    TypeFamilies

  hs-source-dirs: test

  -- Turning off optimizations is intentional; tests aren't
  -- performance sensitive and waiting for compilation is a problem.
  ghc-options:
    -Wall -O0
    -threaded
    -rtsopts "-with-rtsopts=-N"

