{
  "version": 3,
  "sources": [
    {
      "name": "default",
      "kind": "postgres",
      "tables": [
        {
          "table": {
            "schema": "public",
            "name": "test"
          }
        }
      ],
      "configuration": {
        "connection_info": {
          "use_prepared_statements": false,
          "database_url": {
            "from_env": "HASURA_GRAPHQL_DATABASE_URL"
          },
          "isolation_level": "read-committed",
          "pool_settings": {
            "connection_lifetime": 600,
            "retries": 1,
            "idle_timeout": 180,
            "max_connections": 50
          }
        }
      }
    }
  ]
}