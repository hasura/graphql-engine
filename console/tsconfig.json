{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "checkJs": false,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noEmit": true,
    "types": ["react", "jest"],
    "typeRoots": ["./src/types", "node_modules/@types"],
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "cypress"],
  "include": ["src/**/*"]
}
